<header class="navbar navbar-expand-lg bg-warning">
  <div class="container">
    <%= link_to 'Service Booking Admin', admin_root_path, class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <nav class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-baseline">
        <li class="nav-item">
          <%= link_to 'Home', admin_root_path, class: 'nav-link' %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to 'Businesses', admin_businesses_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Bookings', admin_bookings_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= button_to 'Log out', admin_logout_path, method: :delete, class: 'nav-link btn btn-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Log in', admin_login_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
