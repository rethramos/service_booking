<h1>New Appointment</h1>
<p>for <strong><%= @service.name %></strong></p>
<h1></h1>
<%= form_with(model: @appointment, url: admin_appointments_path, class: 'd-flex flex-column gap-2') do |form| %>
  <%= render 'shared/error_messages', object: @appointment %>
  <%= form.hidden_field :service_id, class: 'form-control' %>
  <div class="form-group">
    <%= form.label :timeslot %>
    <%= form.datetime_local_field :timeslot, class: 'form-control' %>
    <span>
      <i>
        Time will be saved in <%= @service.business.timezone %> according to the business' timezone.
      </i>
    </span>
  </div>
  <div class="form-group">
    <%= form.label :max_slots %>
    <%= form.number_field :max_slots, min: 1, class: 'form-control' %>
  </div>
  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
