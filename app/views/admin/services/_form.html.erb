<%= form_with(model: service, url: url, class: 'd-flex flex-column gap-2') do |form| %>
  <%= render 'shared/error_messages', object: service %>
  <%= form.hidden_field :business_id, class: 'form-control' %>
  <div class="form-group">
    <%= form.label :service_category_id %>
    <%= form.select :service_category_id, @categories, {}, class: 'form-select' %>
  </div>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :unit_price, "Unit price (in #{service.currency})" %>
    <%= form.number_field :unit_price, step: 0.01, min: 0, class: 'form-control' %>
  </div>
  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
