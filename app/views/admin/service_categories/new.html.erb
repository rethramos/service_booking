<h1>New Service Category</h1>
<%= form_with model: @service_category, url: admin_service_categories_path, class: 'd-flex flex-column gap-3' do |f| %>
  <%= render 'shared/error_messages', object: @service_category %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <%= f.submit 'Log in', class: 'btn btn-primary' %>
<% end %>

