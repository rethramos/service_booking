<div class="card">
  <% if service_category.image.attached? %>
    <%= image_tag service_category.image.representation(
      resize_to_limit: [500,500]),
      alt: service_category.name,
      class: 'card-img-top',
      height: 200,
      style: 'object-fit:cover;' %>
  <% end %>
  <div class="card-body">
    <p class="card-title h5 text-truncate"><%= service_category.name %></p>
    <p class="card-text text-truncate"><%= service_category.description %></p>
    <div class="d-flex align-items-center">
      <%= link_to 'Edit', edit_admin_service_category_path(service_category), class: 'card-link' %>
      <%= button_to "Delete",
      admin_service_category_path(service_category),
      form: { 
        data: {
          turbo_confirm: "Are you sure you want to delete #{service_category.name}? This will delete the record permanently and mark its associated services as uncategorized."
        }
      },
      method: :delete, class: 'btn btn-link' %>
    </div>
  </div>
</div>
